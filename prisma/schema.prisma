generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  username  String @unique
  password  String
}

model Flower {
  flower_code        Int    @id @default(autoincrement())
  flower_name        String
  flower_image       String @db.LongText
  flower_size        String
  flower_colour      String
  flower_unit_price  Int
  flower_qty_on_hand Int
}

model Customer {
  customer_id        Int    @id @default(autoincrement())
  customer_firstName String
  customer_lastName  String
  customer_phone     String // Changed from customer_contact to customer_phone
  customer_email     String @unique
  customer_address   String
  gender             String
}
